= will_paginate @jobs, renderer: BootstrapPagination::Rails
#jobs
  %texto
    = 'Os Meus Pucs'
  - @jobs.each do |job|
    .job
      %h2
        = link_to job.category.nome , job
      %p
        = job.docente
      %p
        = job.user.email
      %h3
        = link_to "Submeter para Avaliação", :controller => "jobs", :action => "notifica", :id => job.id  
      %estado= 'Estado:' + ' ' + job.situacao
       